
@{
    ViewBag.Title = "Employee";
}

<style>
    .odd{
        background-color:#f3f3f3;
    }
    .even{
        background-color:#ffffff;
    }
</style>

<h2>Employee</h2>
<div ng-controller="GetEmployeeController">
    <table width="80%" border="0" cellpadding="0" cellspacing="0">
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hire Date</th>
            <th>Address</th>
            <th>City</th>
            <th>Postal Code</th>
        </tr>
        <tr ng-repeat="data in Employees">
            <td>{{data.EmployeeID}}</td>
            <td>{{data.FirstName}}</td>
            <td>{{data.LastName}}</td>
            <td>{{data.HireDate.slice(6, -2) | date: 'dd-MM-yyyy'}}</td>
            <td>{{data.Address}}</td>
            <td>{{data.City}}</td>
            <td>{{data.PostalCode}}</td>
        </tr>
    </table>

</div>

@section scripts{ 
<script src="~/Scripts/AngularController/GetEmployeeController.js"></script>
    }


